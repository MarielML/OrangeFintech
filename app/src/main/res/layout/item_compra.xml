<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/compras_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/compras_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_compra"
            android:layout_width="109dp"
            android:layout_height="161dp"
            android:background="#FF9800"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.008"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_currency_exchange_24" />

        <TextView
            android:id="@+id/txtCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÃ³digo: "
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/txtFecha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toEndOf="@+id/image_compra"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.018" />

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de compra: "
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/txtHora"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toEndOf="@+id/image_compra"
            app:layout_constraintTop_toBottomOf="@+id/txtCodigo"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora de compra: "
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/txtCriptomoneda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toEndOf="@+id/image_compra"
            app:layout_constraintTop_toBottomOf="@+id/txtFecha"
            app:layout_constraintVertical_bias="0.438" />

        <TextView
            android:id="@+id/txtCriptomoneda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criptomoneda: "
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/txtValorAdquirido"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toEndOf="@+id/image_compra"
            app:layout_constraintTop_toBottomOf="@+id/txtHora"
            app:layout_constraintVertical_bias="0.438" />

        <TextView
            android:id="@+id/txtValorAdquirido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor adquirido: "
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/txtValorPagado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toEndOf="@+id/image_compra"
            app:layout_constraintTop_toBottomOf="@+id/txtCriptomoneda"
            app:layout_constraintVertical_bias="0.438" />

        <TextView
            android:id="@+id/txtValorPagado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor pagado: "
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/txtComision"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toEndOf="@+id/image_compra"
            app:layout_constraintTop_toBottomOf="@+id/txtValorAdquirido"
            app:layout_constraintVertical_bias="0.438" />

        <TextView
            android:id="@+id/txtComision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora de compra"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toEndOf="@+id/image_compra"
            app:layout_constraintTop_toBottomOf="@+id/txtValorPagado"
            app:layout_constraintVertical_bias="0.438" />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
